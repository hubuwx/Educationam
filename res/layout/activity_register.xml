<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gredientforsplash"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.educationam.RegisterActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lblHeaderRegister"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="Educationam"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:typeface="monospace" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <View
                android:id="@+id/v1"
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="@color/white" >
            </View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:text="Registration"
                android:textColor="@color/white"
                android:typeface="monospace" />

            <View
                android:id="@+id/v2"
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/txtStudentName"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/login_layout"
                android:layout_centerHorizontal="true"
                android:background="@drawable/edittext_shape"
                android:ems="10"
                android:gravity="center"
                android:hint="Student Name"
                android:inputType="text"
                android:paddingLeft="4dp"
                android:singleLine="true"
                android:textColor="#000"
                android:textColorHint="#BBB" >
            </EditText>

            <EditText
                android:id="@+id/txtStudentMobileNo"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/login_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_shape"
                android:ems="10"
                android:gravity="center"
                android:hint="Mobile No"
                android:inputType="phone"
                android:maxLength="10"
                android:paddingLeft="4dp"
                android:singleLine="true"
                android:textColor="#000"
                android:textColorHint="#BBB" >
            </EditText>

            <EditText
                android:id="@+id/txtStudentEmail"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/login_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_shape"
                android:ems="10"
                android:gravity="center"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:paddingLeft="4dp"
                android:singleLine="true"
                android:textColor="#000"
                android:textColorHint="#BBB" >
            </EditText>

            <EditText
                android:id="@+id/txtStudentSchoolName"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/login_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_shape"
                android:ems="10"
                android:gravity="center"
                android:hint="School Name"
                android:inputType="text"
                android:paddingLeft="4dp"
                android:singleLine="true"
                android:textColor="#000"
                android:textColorHint="#BBB" >
            </EditText>

            <EditText
                android:id="@+id/txtStudentDescription"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/login_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_shape"
                android:ems="10"
                android:gravity="center"
                android:hint="Add Description"
                android:inputType="text"
                android:paddingLeft="4dp"
                android:singleLine="true"
                android:textColor="#000"
                android:textColorHint="#BBB" >
            </EditText>

            <Button
                android:id="@+id/btnStudentRegister"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/editText1"
                android:layout_marginTop="10dp"
                android:background="#159F85"
                android:minHeight="40dp"
                android:padding="8dp"
                android:text="Register"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>